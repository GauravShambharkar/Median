generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// prisma/schema.prisma

model User {
  userId   Int      @id  @default(autoincrement())
  email    String    @unique
  name     String    @unique
  articles Article[]
}

//: user can have multiple articals so its:
//: one to many relation

model Article {
  BlogId      Int       @id @default(autoincrement())
  title       String    @unique
  description String?
  published   Boolean?  @default(false)
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt

  userId Int
  // : fields ->  On of the current models schema that eventually going to store the refference models id
  // : reference -> where it belongs
  user   User @relation(fields: [userId], references: [userId])
}
